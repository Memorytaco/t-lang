module std/platforms/unix
;;

use root: std { ctype, type };;
use module ctype (cstr, cptr, cint);;
use module type (str);;

/*
    # file descriptor
    
    a file descriptor is a standard cint.
*/
data fd = cint
;;

type handle = fd
;;

#[bindgen "c" "unix.h"]
external [name "open"] open: str -> handle
;;
